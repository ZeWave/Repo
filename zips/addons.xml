<!-- 3- plugin.program -->

<!-- 3.1- The Wave Wizard -->
<addon id="plugin.program.zewave" name="[COLOR yellow]ZeWave Wizard[/COLOR]" version="0.0.1" provider-name="ZeWave Team">
    <requires>
        <import addon="xbmc.python" version="3.0.0" />
        <import addon="script.module.requests" />
        <import addon="script.module.six" />
    </requires>
    
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
    </extension>
    
    <extension point="xbmc.service" library="startup.py" start="startup" />
    
    <extension point="xbmc.addon.metadata">
        <summary lang="en">[COLOR blue]ZeWave Wizard[/COLOR]</summary>
        <description lang="en">[COLOR blue]ZeWave Wizard[/COLOR]</description>
        <platform>all</platform>
        <reuselanguageinvoker>false</reuselanguageinvoker>
        <source>https://www.github.com/a4k-openproject/plugin.program.openwizard/</source>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>

