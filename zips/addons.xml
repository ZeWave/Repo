    <language>en de</language>
    <platform>all</platform>
    <source>https://github.com/Publish3r/repository.kodi.matrix/tree/main/plugin.video.playlistloader</source>
    <assets>
        <icon>icon.png</icon>
    </assets>
  </extension>
</addon>

