<?xml version="1.0" encoding="UTF-8"?>
<addons>

<!-- 3- plugin.program -->

<!-- 3.1- ZeWave Wizard -->
<addon id="plugin.program.zewave" name="[COLOR yellow]ZeWave Wizard[/COLOR]" version="0.0.1" provider-name="ZeWave Team">
    <requires>
        <import addon="xbmc.python" version="3.0.0" />
        <import addon="script.module.requests" />
        <import addon="script.module.six" />
    </requires>
    
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
    </extension>
    
    <extension point="xbmc.service" library="startup.py" start="startup" />
    
    <extension point="xbmc.addon.metadata">
        <summary lang="en">[COLOR blue]ZeWave Wizard[/COLOR]</summary>
        <description lang="en">[COLOR blue]ZeWave Wizard[/COLOR]</description>
        <platform>all</platform>
        <reuselanguageinvoker>false</reuselanguageinvoker>
        <source>https://www.github.com/a4k-openproject/plugin.program.openwizard/</source>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>

<!-- 6- Repositories B -->

<!-- 6.1- ZeWave Repo -->
<addon id="repository.ZeWave"
		name="ZeWave Add-on repository"
		version="0.0.3"
		provider-name="ZeWave Team">
	<requires>
		<import addon="xbmc.addon" version="12.0.0"/>
	</requires>  
	<extension point="xbmc.addon.repository" name="ZeWave Add-on repository">
		<!-- Do not forget to bump add-on version when changing paths to force a repo refresh -->
        <dir>
            <info compressed="false">https://raw.githubusercontent.com/ZeWave/Repo/main/zips/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/ZeWave/Repo/main/zips/addons.xml.md5</checksum>
            <datadir zip="true">https://github.com/ZeWave/Repo/tree/main/zips</datadir>
			<artdir>https://github.com/ZeWave/Images/tree/main/</artdir>
		</dir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en_US">Install Add-ons from ZeWave repository</summary>
		<summary lang="he_IL">התקנת הרחבות ממאגר זא-וואב</summary>
		<description lang="en_US">Download and install add-ons from ZeWave repository.[CR]	All add-ons on this repository have under gone basic testing.[CR] If you find a broken or not working add-on please report it to ZeWave Team so we can take any action needed.</description>
		<description lang="he_IL">הורדה והתקנה של הרחבות ממאגר זא-וואב. [CR] כל ההרחבות במאגר זה עברו בדיקות בסיסיות. [CR] אם נמצאו הרחבות לא תקינות בבקשה לדווח על כך לצוות זא-וואב כדי שנוכל לתקן את הבעיה.</description>
		<disclaimer lang="en_US">ZeWave Team did not make all the add-ons on this repository and are not responsible for their content</disclaimer>
		<disclaimer lang="he_IL">צוות זא-וואב לא יצר את כל ההרחבות במאגר זה ואינם אחראים לתוכנן</disclaimer>
		<platform>all</platform>
		<assets>
			<icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
		</assets>
        <news></news>
	</extension>
</addon>

</addons>
